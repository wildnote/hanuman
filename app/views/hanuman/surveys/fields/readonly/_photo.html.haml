.form-group
  = render "hanuman/surveys/fields/readonly/shared/label", o: o
  .col-sm-7
    - o.observation_photos.order(sort_order: :asc).each do |p|
      - photo_url = cloudinary_url(p.photo, :sign_url => true)
      - if photo_url.blank?
        - if o.survey.sync_uploading? || o.survey.sync_interrupted?
          %p.form-control-static.bg-info{ style: "padding: 5px;"} This photo has not yet uploaded â€“ the field user may have a poor internet connection.
        - else
          %p.form-control-static.bg-danger{ style: "padding: 5px;"} PHOTO NOT FOUND
          = p.photo.my_public_id + "." + p.photo.format + " | this photo failed to upload successfully, please retry upload or remove"
          %br
          %br
      - else
        = link_to cl_image_tag(p.photo, :crop => :fill, :width => 350, :sign_url => true, angle: p.rotation), cloudinary_url(p.photo, :sign_url => true, angle: p.rotation), html_options = {"data-gallery" => "", class: "gallery-item gallery-photo", id: "photo_" + p.id.to_s, :"data-content-type" => p.photo.resource_type, :"data-download-url" => cloudinary_url(p.photo, :sign_url => true), :"data-file-name" => p.photo.public_id}
        = link_to p.photo.my_public_id + "." + p.photo.format + " | download file", cloudinary_url(p.photo, attachment: true, :sign_url => true), html_options = { download: true }

        %br
        %br
      %label
        Photo description
      %br
      = p.description
      %br
      %br
      %label
        Photo sort order
      %br
      = p.sort_order
      %br
      %br

      %label
        Photo geolocation data
      %br
      Coordinates:
      =p.latitude.to_f.round(8).to_s + ", " + p.longitude.to_f.round(8).to_s
      %br
      - if p.datum.present?
        Datum:
        = p.datum
        %br
      - if p.utm_string.present?
        UTM:
        = p.utm_string
        %br
      - unless p.speed.blank?
        Speed:
        =p.speed.to_f.round(6)
        m/s
        %br
      - unless p.direction.blank?
        Heading:
        =p.degrees_to_direction
        = "(" + p.direction.to_f.round(6).to_s
        degrees)
        %br
      - unless p.altitude.blank?
        Altitude:
        =p.altitude.to_f.round(6)
        m
        %br
      - unless p.accuracy.blank?
        Accuracy:
        =p.accuracy.to_f.round(2)
        m
        %br
        %br
      - unless p.public_id.blank?
        Public ID:
        =p.public_id
      %br
      %br

      - unless p.location_metadata.blank?
        %label
          Full Photo Location Metadata (JSON)
        %a{ "data-toggle" => "collapse", href: "#photo-meta-#{p.id}", "aria-expanded" => "false", "aria-controls" => "photo-meta-#{p.id}", style: "margin-left: 8px; cursor: pointer;" }
          %span.glyphicons.glyphicons-chevron-right
        %div.collapse{ id: "photo-meta-#{p.id}" }
          %small.text-muted Raw JSON for QA
          %pre
            - metadata = p.location_metadata.is_a?(String) ? JSON.parse(p.location_metadata) : p.location_metadata
            = JSON.pretty_generate(metadata.is_a?(Hash) ? metadata.sort_by { |k, v| k.to_s }.to_h : metadata)

      %hr
      %br
